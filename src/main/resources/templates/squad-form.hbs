
{{#partial "content"}}
    <section>
        <form  class="form hero-form" action="/squad/new" method="post" style="width: 30rem; align-content: center">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter the squad name" name="name" required>
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" class="form-control" placeholder="Enter the squad size" name="size" required>
            </div>
            <div class="form-group">
                <label for="power">Power</label>
                <input type="text" class="form-control" placeholder="Enter the squad mission" name="mission" required>
            </div>

            <button type="submit" class="btn btn-primary hero-btn">Submit</button>
        </form>
    </section>
{{/partial}}
{{> layout.hbs}}