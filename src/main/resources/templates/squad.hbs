{{#partial "content"}}
    <div class="container">
        <section class="landing-pg">

                    {{#each heroes}}
                        <div class="hero-item">
                            <img src="/img/DIAMONDHEAD06_4C.png" alt="">
                            <div class="hero-detail">
                                <p>Name: {{name}}</p>
                                <p>Super power: {{ power }}</p>
                                <a class="btns" href="/squad/new/{{id}}">Add To Squad</a>

                    {{/each}}
            <h2>
                <a class="btns" href="/squad-form">Create Your Squad</a>
                <br><br>
                {{#if squads}}
                    AVAILABLE SQUADS
                </h2>
                    {{#each squads}}
                        <div class="squad-cont">
                            <img src="" alt="">
                            <div>
                                <h1>{{ name }} </h1>
                                <p>Purpose: {{mission}}</p>
                                <p>Max participants: {{ size }}</p>
                                <br><br>
                                <h3>MEMBERS</h3>
                                <a class="btns" href="/new/member/{{id}}">Bind Id</a>
                                <button class="addMember add-btn" >Add New Member</button>
                                {{#each squadHeroes}}
                                    <div class="member-cont">
                                        <h5>Name: {{this.name}}</h5>
                                        <h5>Power: {{power}}</h5>
                                        <Button class="btns">Remove</Button>
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <h2>Please create a squad to continue</h2>
                {{/if}}
            </div>

        </section>
    </div>

{{/partial}}
{{#partial "footer"}}
    <script type="text/javascript" src="/js/jquery-3.4.0.min.js"></script>
    <script type="text/javascript" src="/js/script.js"></script>
{{/partial}}
{{> layout.hbs}}