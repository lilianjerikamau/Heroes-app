{{#partial "content"}}
    <link rel='stylesheet' href='/app.css'>
    <h1>Heroes list!</h1>

    {{#if Heroes}} <!--if posts exist, then -->
    {{#each Heroes }} <!--loop-->
    <p>Current post:</p>
    <p>{{ content }}</p> <!--show-->
    {{/each}}
    {{else}} <!--no posts!-->
    <p>No Heroes!</p>
    {{/if}}

    <p>Add a new Post:</p>
    <form action="/form" method="post">
        <div class="form-group">
        <label for="name">Hero's Name</label>
        <input id="name" name="name" type="text">
        </div>
        <div class="form-group">
        <label for="age">Hero's Age</label>
        <input id="age" name="age" type="number">
        </div>
        <div class="form-group">
        <label for="power">Hero's Power</label>
        <input id="power" name="power" type="text">
        </div>
        <div class="form-group">
        <label for="weakness">Hero's Weakness</label>
        <input id="weakness" name="weakness" type="text">
        </div>
        <button type="submit" class="btn btn-default">Add hero</button>
    </form>
    <h2>Choose Squad</h2>
    <form action="/squad" method="post">
        <label for="squad">Hero's Name</label>
        <input type="radio" name="squad" id="squad"  />
        <div class="form-group">
            {{#if mySquadList}}
                <p><h3>Your rectangle's height is {{ mySquadList.mission }}</h3></p>
                <p><h3>Your rectangle's width is {{ mySquadList.size }}</h3></p>
            {{/if}}
        </div>
    </form>
    {{#if mySquadList}} <!--if posts exist, then -->
    {{#each mySquadList }} <!--loop-->
    <p>Current post:</p>
    <p>{{ mission }}</p> <!--show-->
    {{/each}}
    {{else}} <!--no posts!-->
    <p>No posts!</p>
    {{/if}}
{{/partial}}
{{> layout.hbs}}